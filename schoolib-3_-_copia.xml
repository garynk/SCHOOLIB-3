      <bootclasspath refid="applibrarian3.0.module.bootclasspath"/>
      <classpath refid="applibrarian3.0.module.production.classpath"/>
      <src refid="applibrarian3.0.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.applibrarian3.0"/>
    </javac2>
    
    <copy todir="${applibrarian3.0.output.dir}">
      <fileset dir="${module.applibrarian3.0.basedir}/appLibrarian3.0/appLibrarian3.0/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.applibrarian3.0.tests" depends="register.custom.compilers,compile.module.applibrarian3.0.production" description="compile module appLibrarian3.0; test classes" unless="skip.tests"/>
  
