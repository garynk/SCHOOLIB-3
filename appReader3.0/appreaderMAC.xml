<?xml version="1.0" encoding="UTF-8"?>
<project name="appreader3.0" default="all">
  
  
  <property file="appreaderMAC.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/packager.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  <!-- Modules -->
  
  
  <!-- Module appReader -->
  
  <dirname property="module.appreader.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.appreader" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.appreader" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.appreader" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.appreader" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="appreader.output.dir" value="${module.appreader.basedir}/out/production/appReader"/>
  <property name="appreader.testoutput.dir" value="${module.appreader.basedir}/out/test/appReader"/>
  
  <path id="appreader.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="appreader.module.production.classpath">
    <path refid="${module.jdk.classpath.appreader}"/>
  </path>
  
  <path id="appreader.runtime.production.module.classpath">
    <pathelement location="${appreader.output.dir}"/>
  </path>
  
  <path id="appreader.module.classpath">
    <path refid="${module.jdk.classpath.appreader}"/>
    <pathelement location="${appreader.output.dir}"/>
  </path>
  
  <path id="appreader.runtime.module.classpath">
    <pathelement location="${appreader.testoutput.dir}"/>
    <pathelement location="${appreader.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.appreader">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.appreader">
    <patternset refid="excluded.from.module.appreader"/>
  </patternset>
  
  <path id="appreader.module.sourcepath">
    <dirset dir="${module.appreader.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.appreader" depends="compile.module.appreader.production,compile.module.appreader.tests" description="Compile module appReader"/>
  
  <target name="compile.module.appreader.production" description="Compile module appReader; production classes">
    <mkdir dir="${appreader.output.dir}"/>
    <javac destdir="${appreader.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.appreader}/javac">
      <compilerarg line="${compiler.args.appreader}"/>
      <bootclasspath refid="appreader.module.bootclasspath"/>
      <classpath refid="appreader.module.production.classpath"/>
      <src refid="appreader.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.appreader"/>
    </javac>
    
    <copy todir="${appreader.output.dir}">
      <fileset dir="${module.appreader.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.appreader.tests" depends="compile.module.appreader.production" description="compile module appReader; test classes" unless="skip.tests"/>
  
  <target name="clean.module.appreader" description="cleanup module">
    <delete dir="${appreader.output.dir}"/>
    <delete dir="${appreader.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.appreader" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.appreader" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/release"/>
    <property name="artifact.output.appreader:jar" value="${basedir}/release/appReader_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.appReader.jar" value="${artifacts.temp.dir}/appReader.jar"/>
  </target>
  
  <target name="artifact.appreader:jar" depends="init.artifacts, compile.module.appreader" description="Build &#39;appReader:jar&#39; artifact">
    <property name="artifact.temp.output.appreader:jar" value="${artifacts.temp.dir}/appReader_jar"/>
    <mkdir dir="${artifact.temp.output.appreader:jar}"/>
    <mkdir dir="${basedir}/release/META-INF"/>
    <jar destfile="${temp.jar.path.appReader.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/release/META-INF/MANIFEST.MF" prefix="META-INF"/>
      <manifest>
        <attribute name="Main-Class" value="Client.Reader.appReaderLoginForm"/>
      </manifest>
      <zipfileset dir="${appreader.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.appReader.jar}" tofile="${artifact.temp.output.appreader:jar}/appReader.jar"/>
    <delete dir="artifact.output.appreader:jar"/>
    <delete dir="artifact.temp.output.appreader:jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.appreader:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.appreader:jar}"/>
    <copy todir="${artifact.output.appreader:jar}">
      <fileset dir="${artifact.temp.output.appreader:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>