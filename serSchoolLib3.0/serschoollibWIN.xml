<?xml version="1.0" encoding="UTF-8"?>
<project name="serschoollib" default="all">
  
  
  <property file="serschoollibWIN.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.ear"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  <!-- Modules -->
  
  
  <!-- Module serSchoolLib -->
  
  <dirname property="module.serschoollib.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.serschoollib" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.serschoollib" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.serschoollib" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.serschoollib" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="serschoollib.output.dir" value="${module.serschoollib.basedir}/out/production/serSchoolLib"/>
  <property name="serschoollib.testoutput.dir" value="${module.serschoollib.basedir}/out/test/serSchoolLib"/>
  
  <path id="serschoollib.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="serschoollib.module.production.classpath">
    <path refid="${module.jdk.classpath.serschoollib}"/>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="serschoollib.runtime.production.module.classpath">
    <pathelement location="${serschoollib.output.dir}"/>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="serschoollib.module.classpath">
    <path refid="${module.jdk.classpath.serschoollib}"/>
    <pathelement location="${serschoollib.output.dir}"/>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="serschoollib.runtime.module.classpath">
    <pathelement location="${serschoollib.testoutput.dir}"/>
    <pathelement location="${serschoollib.output.dir}"/>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  
  <patternset id="excluded.from.module.serschoollib">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.serschoollib">
    <patternset refid="excluded.from.module.serschoollib"/>
  </patternset>
  
  <path id="serschoollib.module.sourcepath">
    <dirset dir="${module.serschoollib.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.serschoollib" depends="compile.module.serschoollib.production,compile.module.serschoollib.tests" description="Compile module serSchoolLib"/>
  
  <target name="compile.module.serschoollib.production" description="Compile module serSchoolLib; production classes">
    <mkdir dir="${serschoollib.output.dir}"/>
    <javac destdir="${serschoollib.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.serschoollib}/javac">
      <compilerarg line="${compiler.args.serschoollib}"/>
      <bootclasspath refid="serschoollib.module.bootclasspath"/>
      <classpath refid="serschoollib.module.production.classpath"/>
      <src refid="serschoollib.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.serschoollib"/>
    </javac>
    
    <copy todir="${serschoollib.output.dir}">
      <fileset dir="${module.serschoollib.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.serschoollib.tests" depends="compile.module.serschoollib.production" description="compile module serSchoolLib; test classes" unless="skip.tests"/>
  
  <target name="clean.module.serschoollib" description="cleanup module">
    <delete dir="${serschoollib.output.dir}"/>
    <delete dir="${serschoollib.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.serschoollib" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.serschoollib" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/release"/>
    <property name="artifact.output.serschoollib:jar" value="${basedir}/release/serschoollib.jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.serSchoolLib.jar" value="${artifacts.temp.dir}/serSchoolLib.jar"/>
  </target>
  
  <target name="artifact.serschoollib:jar" depends="init.artifacts, compile.module.serschoollib" description="Build &#39;serSchoolLib:jar&#39; artifact">
    <property name="artifact.temp.output.serschoollib:jar" value="${artifacts.temp.dir}/serSchoolLib_jar"/>
    <mkdir dir="${artifact.temp.output.serschoollib:jar}"/>
    <mkdir dir="${basedir}/release/META-INF"/>
    <jar destfile="${temp.jar.path.serSchoolLib.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/release/META-INF/MANIFEST.MF" prefix="META-INF"/>
      <manifest >
        <attribute name="Main-Class" value="Server.Graphic.ServerView"/>
        <attribute name="Class-Path" value="lib/javax.mail-1.5.6.jar,lib/postgresql-42.1.3.jar"/>
      </manifest>

      <zipfileset dir="${serschoollib.output.dir}"/>
      <zipfileset src="${basedir}/lib/javax.mail-1.5.6.jar"/>
      <zipfileset src="${basedir}/lib/postgresql-42.1.3.jar"/>
    </jar>
    <copy file="${temp.jar.path.serSchoolLib.jar}" tofile="${artifact.temp.output.serschoollib:jar}/serSchoolLib.jar"/>
    <delete dir="artifact.output.serschoollib:jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.serschoollib:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.serschoollib:jar}"/>
    <copy todir="${artifact.output.serschoollib:jar}">
      <fileset dir="${artifact.temp.output.serschoollib:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>